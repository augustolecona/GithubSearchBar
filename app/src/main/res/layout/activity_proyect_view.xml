<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/userprofile"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="username" />

    <TextView
        android:id="@+id/proyectname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:hint="proyectName" />


    <TextView

        android:id="@+id/proyectDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/proyectname"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp"
        android:hint="about" />

    <View
        android:id="@+id/divisionH0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/proyectDes"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/data1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/divisionH0"
        android:orientation="horizontal"
        android:weightSum="100">


        <TextView
            android:id="@+id/forks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="50"
            android:hint="Forks"
            android:textSize="15sp" />


        <View
            android:id="@+id/division"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:background="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="50"
            android:hint="Stars"
            android:textSize="15sp" />


    </LinearLayout>


    <View
        android:id="@+id/divisionH"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/data1"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/data2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/data1"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
   >

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="URL"
            android:textSize="15sp" />






    </LinearLayout>

    <View
        android:id="@+id/divisionH2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/data2"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>